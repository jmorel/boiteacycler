{% extends "partials/base.html.twig" %}

{% block content %}
<header class="modular-home-header">
    <div class="diamond-container">
        <div class="diamond diamond--large diamond--left next-diamond--small next-diamond--right">
            <a href="/" class="home-link">
                <img src="{{ url('theme://images/logo.png') }}" alt="La boite à cycler" class="logo">
            </a>
            <div>
                <h1>
                    {{ page.header.header_tagline }}
                </h1>
                <nav>
                    <img src="{{ url('theme://images/logo.png') }}" alt="La boite à cycler">
                    <button>
                        <i class="fa fa-hamburger" aria-hidden="true"></i>
                    </button>
                    <ul>
                        {% for section in page.collection %}
                        <li>
                            <a href="#{{ section.menu }}">{{ section.title }}</a>
                        </li>
                        {% endfor %}
                </nav>
            </div>
        </div>

        <div class="diamond diamond--small diamond--right previous-diamond--left previous-diamond--large next-diamond--center next-diamond--small">
            <div class="event">
                <em>Prochain événement</em>
                <h2 class="event-name">Atelier vélo</h2>
                <p>
                    Le <span class="event-date">dimanche 23 octobre de 11h à 13h</span>
                    <span class="event-location">devant la médiathèque de Viroflay</span>
                </p>
                <p class="event-links">
                    <a href="#" class="event-link"><i class="fa fa-fw fa-map-marker"></i>plan</a>
                    <a href="#" class="event-link"><i class="fa fa-fw fa-calendar"></i>ajouter à mon calendrier</a>
                </p>
            </div>
            <p>
                {{ page.header.header_events_call_to_action | markdown }}
            </p>

            <h2>Tous les événements à venir</h2>
            <iframe src="{{ page.header.header_calendar_url}}" width="100%" height="300" frameborder="0" scrolling="no"></iframe>
        </div>
    </div>
</header>

{% for subpage in page.collection() %}
    {{ subpage.content }}
{% endfor %}

<footer>
    <div class="diamond-container">
        <div class="diamond diamond--large diamond--right previous-diamond--large previous-diamond--left">
            <div class="row">
                {% for column in theme_config.footer_columns %}
                <div class="col">
                    {{ column.content | markdown }}
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</footer>
{% endblock content %}
